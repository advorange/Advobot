<local:AdvobotTextBox x:Class="Advobot.Windows.Classes.Controls.AdvobotNumberBox"
                      x:ClassModifier="internal"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:local="clr-namespace:Advobot.Windows.Classes.Controls"
                      mc:Ignorable="d"
                      d:DesignHeight="50"
                      d:DesignWidth="150"
                      TextChanged="OnTextChanged"
                      PreviewTextInput="OnPreviewTextInput">

    <local:AdvobotTextBox.Template>
        <ControlTemplate TargetType="local:AdvobotTextBox">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <local:AdvobotTextBox x:Name="TextDisplayer"
                                      Grid.Row="0"
                                      Grid.Column="0"
                                      Grid.RowSpan="2"
                                      HorizontalScrollBarVisibility="Auto"
                                      FontResizeValue="{TemplateBinding FontResizeValue}"
                                      Text="{TemplateBinding Text}"
                                      MaxLength="{TemplateBinding MaxLength}"
                                      HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                      BorderThickness="{TemplateBinding BorderThickness}"
                                      BorderBrush="{TemplateBinding BorderBrush}"
                                      IsEnabled="{TemplateBinding IsEnabled}" />
                <local:AdvobotRepeatButton x:Name="UpButton"
                                           Grid.Row="0"
                                           Grid.Column="1"
                                           FontFamily="Segoe UI Symbol"
                                           FontResizeValue=".01"
                                           Content="&#xE110;"
                                           ClickMode="Press"
                                           Click="OnUpButtonClick"
                                           BorderThickness="{TemplateBinding BorderThickness}"
                                           BorderBrush="{TemplateBinding BorderBrush}"
                                           IsEnabled="{TemplateBinding IsEnabled}" />
                <local:AdvobotRepeatButton x:Name="DownButton"
                                           Grid.Row="1"
                                           Grid.Column="1"
                                           FontFamily="Segoe UI Symbol"
                                           FontResizeValue=".01"
                                           Content="&#xE1FD;"
                                           ClickMode="Press"
                                           Click="OnDownButtonClick"
                                           BorderThickness="{TemplateBinding BorderThickness}"
                                           BorderBrush="{TemplateBinding BorderBrush}"
                                           IsEnabled="{TemplateBinding IsEnabled}" />
            </Grid>
        </ControlTemplate>
    </local:AdvobotTextBox.Template>
</local:AdvobotTextBox>