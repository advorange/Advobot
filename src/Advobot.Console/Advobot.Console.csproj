<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <Version>1.0.0</Version>
    <PackageId>Advobot.Console</PackageId>
    <Authors>Advorange</Authors>
    <Company>Advorange</Company>
    <Copyright>Copyright © 2018</Copyright>
    <Product>Advobot</Product>
    <NeutralLanguage>en</NeutralLanguage>
    <RepositoryUrl>https://github.com/advorange/Advobot</RepositoryUrl>
    <PackageProjectUrl>https://github.com/advorange/Advobot</PackageProjectUrl>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <Description>Launches a console instance of Advobot.</Description>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="AdvorangesSettingParser" Version="1.3.2.4" />
    <PackageReference Include="AdvorangesUtils" Version="1.0.11.3">
      <NoWarn>NU1701</NoWarn>
    </PackageReference>
    <PackageReference Include="Discord.Net" Version="2.2.0-dev-20190730.2" />
    <PackageReference Include="LiteDB" Version="4.1.4" />
    <PackageReference Include="Magick.NET-Q8-AnyCPU" Version="7.14.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Advobot.Core\Advobot.Core.csproj" />
    <ProjectReference Include="..\Commands\Advobot.Commands\Advobot.Commands.csproj" />
    <ProjectReference Include="..\Commands\Advobot.Gacha\Advobot.Gacha.csproj" />
  </ItemGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <DefineConstants>TRACE</DefineConstants>
  </PropertyGroup>

  <PropertyGroup>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <NullableContextOptions>enable</NullableContextOptions>
    <LangVersion>preview</LangVersion>
    <NoWarn>CS8632</NoWarn>
  </PropertyGroup>

</Project>
