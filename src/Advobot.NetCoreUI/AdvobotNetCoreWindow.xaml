<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Advobot.NetCoreUI">
  <Grid RowDefinitions="20*,1*,1*,2*" ColumnDefinitions="3*,1*">
    <!-- Output -->
    <TextBox Name="Output" Text="{Binding OutputValue}" Grid.ColumnSpan="2" IsReadOnly="True" />

    <!-- Input -->
    <Grid Name="InputGrid" Grid.Row="2" Grid.RowSpan="2" ColumnDefinitions="8*,1*">
      <TextBox Name="InputTextBox" Text="{Binding Path=InputValue}" MaxHeight="1000" TextWrapping="Wrap" />
      <Button Content="Enter" Command="{Binding InputValueCommand}" Grid.Column="1" />
    </Grid>

    <!-- Application Info Bar -->
    <Grid Name="ApplicationInfoBar" Grid.Row="1" ColumnDefinitions="*,*,*,*">
      <Grid.Styles>
        <Style Selector="TextBox">
          <Setter Property="IsReadOnly" Value="True"/>
          <Setter Property="TextAlignment" Value="Center"/>
        </Style>
      </Grid.Styles>
      
      <TextBox Text="{Binding UptimeString}" Grid.Column="0" />
      <TextBox Text="{Binding LatencyString}" Grid.Column="1" />
      <TextBox Text="{Binding MemoryString}" Grid.Column="2" />
      <TextBox Text="{Binding ThreadCountString}" Grid.Column="3" />
    </Grid>
  </Grid>
</Window>