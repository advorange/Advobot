<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:colors="clr-namespace:Advobot.SharedUI.Colors;assembly=Advobot.Core">

  <Grid RowDefinitions="1*,1*" ColumnDefinitions="4*,1*"
        DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}">
    <Grid Grid.RowSpan="2" ColumnDefinitions="6*,1*">   
      <DropDown Grid.ColumnSpan="2" Items="{Binding UserList}" SelectedItem="{Binding CurrentId, Mode=OneWayToSource}" BorderThickness="0"/>
      <TextBox Name="InputBox" Text="{Binding CurrentId}" BorderThickness="0"/>

      <Border Classes="b1" BorderBrush="{Binding BorderBrush, ElementName=InputBox}"/>
    </Grid>

    <Button Grid.Row="0" Grid.Column="1" Content="+" Command="{Binding ModifyListCommand}" CommandParameter="True"/>
    <Button Grid.Row="1" Grid.Column="1" Content="-" Command="{Binding ModifyListCommand}" CommandParameter="False"/>
  </Grid>
</UserControl>