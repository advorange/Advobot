<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Grid RowDefinitions="1*,1*" ColumnDefinitions="4*,1*"
        DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}">
    <!-- Use a two way binding so we can get red errors when an invalid value is supplied -->
    <TextBox Grid.Row="0" Grid.Column="0" Text="{Binding AddId}"/>
    <DropDown Grid.Row="1" Grid.Column="0" Items="{Binding UserList}" SelectedItem="{Binding RemoveId, Mode=OneWayToSource}"/>

    <Button Grid.Row="0" Grid.Column="1" Content="+" Command="{Binding ModifyList}" CommandParameter="True"/>
    <Button Grid.Row="1" Grid.Column="1" Content="-" Command="{Binding ModifyList}" CommandParameter="False"/>
  </Grid>
</UserControl>