<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>netcoreapp2.1</TargetFrameworks>
  </PropertyGroup>
  <ItemGroup>
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <EmbeddedResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="Advobot.NetCoreUI\**" />
    <EmbeddedResource Remove="Advobot.NetCoreUI\**" />
    <None Remove="Advobot.NetCoreUI\**" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="AdvorangesSettingParser" Version="1.0.0" />
    <PackageReference Include="AdvorangesUtils" Version="1.0.10" />
    <PackageReference Include="Avalonia" Version="0.6.2-build5957-beta" />
    <PackageReference Include="Avalonia.Desktop" Version="0.6.2-build5957-beta" />
    <PackageReference Include="ReactiveUI" Version="8.6.1" />
    <PackageReference Include="System.Reactive.Core" Version="4.1.0" />
    <PackageReference Include="System.Reactive.Interfaces" Version="4.1.0" />
    <PackageReference Include="System.Reactive.Linq" Version="4.1.0" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Advobot.Console\Advobot.Console.csproj" />
    <ProjectReference Include="..\Advobot.Core\Advobot.Core.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="AdvobotNetCoreApp.xaml.cs">
      <DependentUpon>AdvobotNetCoreApp.xaml</DependentUpon>
    </Compile>
    <Compile Update="AdvobotNetCoreWindow.xaml.cs">
      <DependentUpon>AdvobotNetCoreWindow.xaml</DependentUpon>
    </Compile>
  </ItemGroup>

  <PropertyGroup>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <LangVersion>latest</LangVersion>
    <AutoGenerateBindingRedirects>True</AutoGenerateBindingRedirects>
  </PropertyGroup>
</Project>