<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>netcoreapp2.1;</TargetFrameworks>
  </PropertyGroup>
  <ItemGroup>
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <EmbeddedResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="Advobot.NetCoreUI\**" />
    <EmbeddedResource Remove="Advobot.NetCoreUI\**" />
    <None Remove="Advobot.NetCoreUI\**" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="Classes\Controls\NumberBox.xaml" />
    <None Remove="Classes\Controls\UserListEditor.xaml" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="AdvorangesSettingParser" Version="1.0.0" />
    <PackageReference Include="AdvorangesUtils" Version="1.0.11" />
    <PackageReference Include="Avalonia" Version="0.6.2-build6028-beta" />
    <PackageReference Include="Avalonia.Desktop" Version="0.6.2-build6028-beta" />
    <PackageReference Include="Discord.Net" Version="2.0.0-beta2-00982" />
    <PackageReference Include="Discord.Net.Commands" Version="2.0.0-beta2-00982" />
    <PackageReference Include="Discord.Net.Core" Version="2.0.0-beta2-00982" />
    <PackageReference Include="Discord.Net.Rest" Version="2.0.0-beta2-00982" />
    <PackageReference Include="Discord.Net.Webhook" Version="2.0.0-beta2-00982" />
    <PackageReference Include="Discord.Net.WebSocket" Version="2.0.0-beta2-00982" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="2.1.1" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="2.1.1" />
    <PackageReference Include="ReactiveUI" Version="8.7.1" />
    <PackageReference Include="System.Reactive.Core" Version="4.1.0" />
    <PackageReference Include="System.Reactive.Interfaces" Version="4.1.0" />
    <PackageReference Include="System.Reactive.Linq" Version="4.1.0" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Advobot.Commands\Advobot.Commands.csproj" />
    <ProjectReference Include="..\Advobot.Core\Advobot.Core.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="AdvobotNetCoreApp.xaml.cs">
      <DependentUpon>AdvobotNetCoreApp.xaml</DependentUpon>
    </Compile>
    <Compile Update="AdvobotNetCoreWindow.xaml.cs">
      <DependentUpon>AdvobotNetCoreWindow.xaml</DependentUpon>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Interfaces\" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Update="Classes\Controls\NumberBox.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Classes\Controls\UserListEditor.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>

  <PropertyGroup>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <LangVersion>latest</LangVersion>
    <AutoGenerateBindingRedirects>True</AutoGenerateBindingRedirects>
  </PropertyGroup>
</Project>