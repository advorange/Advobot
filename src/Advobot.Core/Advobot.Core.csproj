    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="AssemblyVersion.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <OutputFileName>AssemblyVersion.cs</OutputFileName>  
